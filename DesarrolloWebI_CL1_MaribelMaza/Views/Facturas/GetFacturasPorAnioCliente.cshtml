@model IEnumerable<DesarrolloWebI_CL1_MaribelMaza.Models.Factura>

@{
    ViewData["Title"] = "GetFacturasPorAnioCliente";
}

<h1>Facturas Por Año de Emision y Cliente</h1>

<!-- FORMULARIO  -->
@using (Html.BeginForm())
{
    <en>Ingrese el año:  </en>
    @Html.TextBox("anio", "")
    <br />
    <br />
    <en>Ingrese el cliente:  </en>
    @Html.TextBox("razonSocial", "")
    <br />
    <br />
    <button class="btn btn-outline-success"> Buscar </button>
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaEmision)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.razonSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaEmision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.razonSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>

<!-- PAGINACION -->
<div>
    @for (int i = 0; i < ViewBag.numeroPaginas; i++)
    {
        @Html.ActionLink(
    (i + 1 ).ToString(),
    "GetFacturasPorAnioCliente",
    "Facturas",
    new { anio = ViewBag.anio ,razonSocial = ViewBag.razonSocial , pagina = i },
    new { @class = "btn btn-primary" }
    )
    }

</div>