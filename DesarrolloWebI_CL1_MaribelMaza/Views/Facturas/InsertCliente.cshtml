@model DesarrolloWebI_CL1_MaribelMaza.Models.Cliente

@{
    ViewData["Title"] = "InsertCliente";
}

<h3>Registrar Nuevo Cliente</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="razonSocial" class="control-label">Razon Social</label>
                <input asp-for="razonSocial" class="form-control" />
                <span asp-validation-for="razonSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direccion" class="control-label">Direccion</label>
                <input asp-for="direccion" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefono" class="control-label">Telefono</label>
                <input asp-for="telefono" class="form-control" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idCategoriaCliente" class="control-label">Categoria</label>
                <select asp-for="idCategoriaCliente" asp-items="@ViewBag.categoriasCliente" class="form-control"></select>
                <span asp-validation-for="idCategoriaCliente" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <a asp-action="InsertCliente" asp-controller="Facturas" class="btn btn-success">Nuevo</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="FiltroClientes" asp-controller="Facturas" class="btn btn-danger">Regresar</a>
            </div>
        </form>
    </div>
</div>


<div>
    @ViewBag.mensaje
</div>

